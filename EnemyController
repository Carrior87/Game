using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class EnemyController : MonoBehaviour
{
    public static EnemyController Instance;

    private void Awake()
    {
        if (Instance == null)
        {
            Instance = this;
            DontDestroyOnLoad(gameObject); // Optional: keeps the object persistent across scenes
            Debug.Log("EnemyController instance set");
        }
        else if (Instance != this)
        {
            Destroy(gameObject); // There should only be one instance
            Debug.Log("Duplicate EnemyController destroyed");
        }
    }


    public void EnemyTurn()
    {
        // Add any logic needed at the start of the enemy's turn here
        GameManager.Instance.EndEnemyTurn();
    }
}
